<script>
    function get_first_char(s) {
        let str = "", temp = "";
        for (let i = s.length - 1; i > 0; i--) {
            if (s[i].match(/[a-zA-Z]/) && s[i - 1] === ' ') {
                temp += s[i];
            }
        }
        str += s[0];
        for (let i = temp.length - 1; i >= 0; i--) {
            str += temp[i];
        }
        return str;
    }
</script>

