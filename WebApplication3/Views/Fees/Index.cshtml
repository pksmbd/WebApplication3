@model IEnumerable<WebApplication3.Models.FeesModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
@Html.Raw(TempData["savemsg"])

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
<div class="col-md-1">
        Search:
    </div> 
    <div class="col-md-3">
        <input type="text" placeholder="Search Records" id="txtSearch" class="form-control" />
</div>
</div>


<div id="grdFees"></div>

<script>
    $(() => {
        getFees();

        $('#txtSearch').on('keyup', () => {
            getFees();
        });
    });

    function getFees() { 
        $.ajax({
            url: '@Url.Action("FilterFees","Fees")',
            datatype: 'html',
            method: 'GET',
            data: { searchText: $('#txtSearch').val() },
            success: function (res) { 
                $('#grdFees').html('').html(res);
            },
            error: function (err) { 
                console.log(err);
            }
        })
    }
</script>

<script src="https://code.jquery.com/jquery-3.7.1.js"></script>